{
    "compilerOptions": {
        "skipLibCheck": true,
        "target": "ES2022",

        "strict": true,
        "noUncheckedIndexedAccess": true,

        "moduleResolution": "NodeNext",
        "module": "NodeNext",
        "outDir": "./lib/",
        "sourceMap": true,

        "lib": ["es2022"],
        "declaration": true
    },
    "exclude": [
        "node_modules",
        "lib"
    ]
}